#!/usr/bin/env node

require('coa').Cmd()
  .name(process.argv[1])
  .helpful()
  .opt()
    .name('version')
    .title('Version')
    .short('v').long('version')
    .only()
    .flag()
    .act(function(opts) {
      var package = require('fs').readFileSync(__dirname + '/../package.json')
      return JSON.parse(package).version
    })
    .end()
  .opt()
      .name('input').title('Input file (default: stdin)')
      .short('i').long('input')
      .input()
      .end()
  .opt()
      .name('compress').title('Compress output (default: false)')
      .short('c').long('compress')
      .flag()
      .end()
  .opt()
      .name('output').title('Output file (default: stdout)')
      .short('o').long('output')
      .output()
      .end()
  .act(function(options) {
    return require('../lib/bemss').run(options)
  })
  .run()